        @if (!Model.isPublicEngagement)
        {
            <div class="seperator"></div>
            if (Model.articleTemplateId == 2)
            {
                if (!String.IsNullOrEmpty(Model.videoUrl))
                {
                    <input class="videoUrl" value="@Model.videoUrl" hidden />
                    <div class="youTube" style="margin-top: 35px;">

                    </div>
                }

            }

        }


        @if (!String.IsNullOrEmpty(Model.description))
        {
            <div class="text">
                @Html.Raw(Model.description)
            </div>
            <br />
        }
        @if (!Model.isPublicEngagement)
        {
            if (Model.articleTemplateId == 3)
            {
                if (!String.IsNullOrEmpty(Model.audioSrc))
                {

                    <div class="player" style=" direction: ltr;">
                        <iframe width="100%" height="166" scrolling="no" frameborder="no" allow="autoplay" src="https://w.soundcloud.com/player/?url=@Model.audioSrc&color=%23100e10&auto_play=false&hide_related=false&show_comments=true&show_user=true&show_reposts=false&show_teaser=true"></iframe>

                    </div>
                }
            }


            if (Model.articleTemplateId == 1)
            {

                foreach (var item in Model.arcticlesRepeater)
                {
                    if (item.images.Any())
                    {
                        <div class="picDiv withcaption">

                            <!-- if pic have caption add this class "withcaption "-->
                            @foreach (var sub in item.images)
                            {<div class="item">
                                    @if (ViewBag.language == "en")
                                    {
                                        if (!String.IsNullOrEmpty(sub.caption))
                                        {<div class="pic"><img src="@Url.Content(sub.imgSrc)" alt="@sub.caption" /></div>
                                            <div class="captionPic">@sub.caption</div>

                                        }
                                    }
                                    else
                                    {
                                        if (!String.IsNullOrEmpty(sub.subCaption))
                                        {
                                            <div class="pic"><img src="@Url.Content(sub.imgSrc)" alt="@sub.subCaption" /></div>
                                            <div class="captionPic">@sub.subCaption</div>

                                        }
                                        else
                                        {
                                            if (!String.IsNullOrEmpty(sub.caption))
                                            {
                                                <div class="pic"><img src="@Url.Content(sub.imgSrc)" alt="@sub.caption" /></div>
                                                <div class="captionPic">@sub.caption</div>

                                            }
                                            else
                                            {
                                                <div class="pic"><img src="@Url.Content(sub.imgSrc)" alt="@item.title" /></div>

                                            }
                                        }
                                    }

                                </div>
                            }



                        </div>
                    }
                    if (ViewBag.language == "en")
                    {
                        if (!String.IsNullOrEmpty(item.Description))
                        {
                            <div class="text">
                                @Html.Raw(item.Description)
                            </div>
                        }
                        else
                        { <br /><br />}
                    }
                    else
                    {
                        if (!String.IsNullOrEmpty(item.ArabicDescription))
                        {
                            <div class="text">
                                @Html.Raw(item.ArabicDescription)
                            </div>
                        }
                        else
                        { <br /><br />}
                    }

                    if (!String.IsNullOrEmpty(item.imgSrc))
                    {
                        <div class="picDiv withcaption">
                            <!-- if pic have caption add this class "withcaption "-->
                            @if (ViewBag.language == "en")
                            {
                                <div class="item">
                                    @if (!String.IsNullOrEmpty(item.captionImage))
                                    {
                                        <div class="pic"><img src="@Url.Content(item.imgSrc)" alt="@item.captionImage" /></div>

                                        <div class="captionPic">@item.captionImage</div>

                                    }
                                    else
                                    {
                                        <div class="pic"><img src="@Url.Content(item.imgSrc)" alt="@item.title" /></div>
                                    }




                                </div>
                            }
                            else
                            {
                                if (!String.IsNullOrEmpty(item.arabicCaptionImage))
                                {
                                    <div class="pic"><img src="@Url.Content(item.imgSrc)" alt="@item.arabicCaptionImage" /></div>

                                    <div class="captionPic">@item.arabicCaptionImage</div>

                                }
                                else
                                {
                                    <div class="pic"><img src="@Url.Content(item.imgSrc)" alt="@item.title" /></div>
                                }
                            }

                        </div>
                    }
                }




                if (!String.IsNullOrEmpty(Model.note))
                {
                    <div class="note">
                        @Html.Raw(Model.note)
                    </div>
                }
            }
        }
    </div>

