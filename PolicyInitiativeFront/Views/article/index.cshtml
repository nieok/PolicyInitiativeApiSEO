<div class="Article @(( ViewBag.language == "ar" || Model.hasArabic == true) ? "arabic" : "") @(( Model.articleTemplateId == 2) ? "video" : "")">
    <div class="container">
        @if (!Model.isPublicEngagement)
        {
            if (Model.articleTemplateId == 4)
            {
                if (!String.IsNullOrEmpty(Model.topimgSrc))
                {
                    <div class="picDiv">
                        <div class="item">
                            <div class="pic"><img src="@Url.Content(Model.topimgSrc)" /></div>
                        </div>
                    </div>
                }
            }
        }
        else
        {
            if (!String.IsNullOrEmpty(Model.topimgSrc))
            {
                <div class="picDiv">
                    <div class="item">
                        <div class="pic"><img src="@Url.Content(Model.topimgSrc)" /></div>
                    </div>
                </div>
            }
        }


        @if (!Model.isPublicEngagement)
        {
            if (!String.IsNullOrEmpty(Model.Date))
            {
                <div class="date">@Model.Date</div>
            }


        }
        else
        {
            if (!String.IsNullOrEmpty(Model.Date))
            {
                if (ViewBag.language == "en")
                {
                    <div class="date red">
                        @Model.Date @if (!String.IsNullOrEmpty(Model.publicnewsCategory))
                    {<span class="dash">|</span><span class="categ">@Model.publicnewsCategory</span>}

                    </div>
                }
                else
                {
                    <div class="date red">
                        @Model.Date @if (!String.IsNullOrEmpty(Model.arnewsCategory))
                        {<span class="dash">|</span><span class="categ">@Model.arnewsCategory</span>}
                    </div>
                }

            }
        }
        @if (!String.IsNullOrEmpty(Model.title))
        {
            <h1 class="title">@Model.title </h1>
        }

        @if (!Model.isPublicEngagement)
        {
            if (!String.IsNullOrEmpty(Model.subtitle))
            {
                <h2 class="subtitle">@Model.subtitle </h2>
            }
        }
        else
        {
            <div class="seperator"></div>
        }
        @{int comaCount = 0;}
        @if (Model.articleTemplateId != 4)
        {
            if (!Model.isPublicEngagement)
            {
                foreach (var item in Model.authors)
                {
                    if (ViewBag.language == "en")
                    {
                        comaCount++;
