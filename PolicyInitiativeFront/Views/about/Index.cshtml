                                        <h2 class="caption">@item.title</h2>
                                    </div>
                                </div>
                                @if (!String.IsNullOrEmpty(item.description))
                                {
                                    <div class="text">
                                        @Html.Raw(item.description)
                                    </div>
                                }
                              
                            </a>
                        </li>
                        count++;
                    }
                }
